<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/ca_layout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:paddingTop="30dp"
	    android:paddingBottom="50dp" >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Commission Amount "
		    android:textSize="18sp"/>
		
		<TextView 
		    android:id="@+id/ca_txt_amount"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Rs 1500"
		    android:textSize="16sp"/>
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/ca_layout2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/ca_layout1"
	    android:orientation="horizontal"
	    android:gravity="left" >
		
	    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Last 5 Deductions"
			    android:textSize="16sp"/>
    </LinearLayout>
	    
    <LinearLayout
        android:id="@+id/ca_layout3"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_below="@id/ca_layout2" >
		
		<TextView
		    android:id="@+id/ca_txt_deduction1" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Booking ID : "
		    android:textSize="14sp"/>
		
		<TextView 
		    android:id="@+id/ca_txt_deduction2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Booking ID : "
		    android:textSize="14sp"/>
		
		<TextView 
		    android:id="@+id/ca_txt_deduction3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Booking ID : "
		    android:textSize="14sp"/>
		
		<TextView 
		    android:id="@+id/ca_txt_deduction4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Booking ID : "
		    android:textSize="14sp"/>
		
		<TextView 
		    android:id="@+id/ca_txt_deduction5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Booking ID : "
		    android:textSize="14sp"/>
	</LinearLayout>
	
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:background="#000000"
	    android:layout_alignParentBottom="true">
	    
	    <Button 
	        android:id="@+id/ca_btn_back"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="5dp"
	        android:text="BACK"
	        android:background="#FFCC00"/>
	</LinearLayout>
	
</RelativeLayout>

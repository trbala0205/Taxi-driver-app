<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/package_list_selector"
    android:orientation="horizontal"
    android:paddingLeft="5dip" >

    <!--  ListRow Left sied Thumbnail image -->
	<LinearLayout 
	    android:id="@+id/pl_item_linear_from" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"		
        android:layout_alignParentLeft="true" 
	    android:layout_marginRight="5dip"
	    android:orientation="horizontal">
        
	    <!-- Title Of Song-->
    <TextView
        android:id="@+id/pl_item_from"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="#040404"
        android:typeface="sans" 
        android:textSize="15dip"
        android:textStyle="bold"/>
    
    <!-- Artist Name -->
    <TextView
        android:id="@+id/pl_item_from_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"
        android:text="" />
        
	</LinearLayout>
	
	<!--  ListRow Left sied Thumbnail image -->
	<LinearLayout 
	    android:id="@+id/pl_item_linear_to" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/pl_item_linear_from"	
        android:layout_alignParentLeft="true" 
	    android:layout_marginRight="5dip"
	    android:orientation="horizontal">
        
	    <!-- Title Of Song-->
    <TextView
        android:id="@+id/pl_item_to"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="To"
        android:textColor="#040404"
        android:typeface="sans" 
        android:textSize="15dip"
        android:textStyle="bold"/>
    
    <!-- Artist Name -->
    <TextView
        android:id="@+id/pl_item_to_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"
        android:text="Just gona stand there and sdfkj dfkn dfk dfi dfd ..." />
        
	</LinearLayout>

	
      
     <!-- Rightend Arrow -->    
    <!--  <ImageView 
        android:id="@+id/pendinglist_arrow"
        android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
     	android:src="@drawable/arrow"
     	android:layout_alignParentRight="true"
     	android:layout_centerVertical="true"/> -->
     
     <!-- Rightend Duration -->

	<LinearLayout 
	    android:id="@+id/pl_item_linear_time" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/pl_item_linear_to"	
        android:layout_alignParentLeft="true" 
	    android:layout_marginRight="5dip"
	    android:orientation="horizontal">
        
	    <!-- Title Of Song-->
	    <TextView
	        android:id="@+id/pl_item_time_lbl"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:text="Pick Time"
	        android:textColor="#040404"
	        android:typeface="sans" 
	        android:textSize="15dip"
	        android:textStyle="bold"/>
	    
	    <TextView
	        android:id="@+id/pl_item_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/pl_item_linear_to"
	        android:layout_alignParentLeft="true"
	        android:gravity="right"
	        android:text="5:45"
	        android:textColor="#040404"
	        android:textSize="14dip"
	        android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
